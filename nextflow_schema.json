{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "$defs": {
        "input_output_options": {
            "title": "Input/Output options",
            "type": "object",
            "description": "Define the input for the pipeline",
            "required": ["input"],
            "properties": {
                "input": {
                    "type": "string",
                    "format": "file-path",
                    "schema": "assets/samplesheet_schema.json",
                    "mimetype": "text/csv",
                    "description": "Path to samplesheet CSV with sample information",
                    "help_text": "This parameter is required and must be specified"
                },
                "output_format": {
                    "type": "string",
                    "default": "pdf",
                    "description": "Output format for final documents",
                    "enum": ["pdf", "rtf", "docx", "html"]
                },
                "keep_markdown": {
                    "type": "boolean",
                    "default": false,
                    "description": "Whether to keep intermediate markdown files"
                }
            }
        }
    },
    "allOf": [
        { "$ref": "#/$defs/input_output_options" }
    ]
}
